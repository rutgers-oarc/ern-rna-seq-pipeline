
params { 
    transcriptome = "${PWD}/InputData/transcriptome/transcriptome.fa"
    SingleEnd     = "false"
    reads         = "${PWD}/InputData/reads/*.fastq"
    experiment    = "${PWD}/InputData/experiment/hiseq_info.txt"
    output        = "${PWD}/results"
    fragment_len  = '180'
    fragment_sd   = '20'
    bootstrap     = '100'
    task_cpus = 1
} 


process {
    publishDir = [path: params.output, mode: 'copy', overwrite: 'true']
} 

profiles {
    crg {
        process {
          cpus=params.task_cpus
        }
    }
}
